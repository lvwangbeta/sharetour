<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>sharetour</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.sharetour.listener.MyServletContextListener</listener-class>
  </listener>
  <filter>
    <display-name>URLMappingFilter</display-name>
    <filter-name>URLMappingFilter</filter-name>
    <filter-class>com.sharetour.util.URLMappingFilter</filter-class>
    <init-param>
      <param-name>domain</param-name>
      <param-value></param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>/action/,/uploads/,/img/,/css/,/js/</param-value>
    </init-param>
    <init-param>
      <param-name>ignoreExts</param-name>
      <param-value>ico,css,js,jpg,gif,png,bmp,doc,xls,pdf,txt,html,htm,zip,rar</param-value>
    </init-param>
    <init-param>
      <param-name>pageLocation</param-name>
      <param-value>/</param-value>
    </init-param>
    <init-param>
      <param-name>www</param-name>
      <param-value>/www</param-value>
    </init-param>
    <init-param>
      <param-name>m</param-name>
      <param-value>/wap</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>URLMappingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.sharetour.control.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/action/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>RegisterServlet</display-name>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.sharetour.control.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/action/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>NewPostServlet</display-name>
    <servlet-name>NewPostServlet</servlet-name>
    <servlet-class>com.sharetour.control.NewPostServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewPostServlet</servlet-name>
    <url-pattern>/action/newpost</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ImgUploadServlet</display-name>
    <servlet-name>ImgUploadServlet</servlet-name>
    <servlet-class>com.sharetour.control.ImgUploadServlet</servlet-class>
    <init-param>
      <param-name>temppath</param-name>
      <param-value>temp</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImgUploadServlet</servlet-name>
    <url-pattern>/action/imgupload</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ImgDownServlet</display-name>
    <servlet-name>ImgDownServlet</servlet-name>
    <servlet-class>com.sharetour.control.ImgDownServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImgDownServlet</servlet-name>
    <url-pattern>/action/imgs</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>MongoManager</display-name>
    <servlet-name>MongoManager</servlet-name>
    <servlet-class>com.sharetour.control.MongoManager</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MongoManager</servlet-name>
    <url-pattern>/action/mm</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.sharetour.control.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/action/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LikeServlet</display-name>
    <servlet-name>LikeServlet</servlet-name>
    <servlet-class>com.sharetour.control.LikeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LikeServlet</servlet-name>
    <url-pattern>/action/like</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CommentServlet</display-name>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>com.sharetour.control.CommentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommentServlet</servlet-name>
    <url-pattern>/action/comment</url-pattern>
  </servlet-mapping>
</web-app>